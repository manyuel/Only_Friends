<div class="container3">
 <h2 class="title3 ">Your chosen friend</h2>

  <div class="d-flex justify-content-center">
    <div class="full-carousel">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "222611.jpg", class:"d-block" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "222615.jpg", class:"d-block" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "222801.jpg", class:"d-block" %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-start">
  <div class="Info">
    <p><%= "Name: #{@user.name}" %></p>
    <p><%= "Rating: #{@user.rating}" %></p>
    <p><%= "About me: #{@user.bio}" %></p>
  </div>
  <div class= "Booking">
    <h5 class="Meeting">Simply choose a date to request a rendezvouz</h5>
      <%= simple_form_for [@user, @booking] do |f| %>
        <%= f.input :date, label: "Choose a date that you'd like to meet", as: :date, html5: true %>
        <%= f.submit %>
        <% end %>
  </div>
  </div>

</div>


<div class="BackButton">
<%= link_to "Return to Friends listings", users_path, class: "text-decoration-none link-dark" %>
</div>
